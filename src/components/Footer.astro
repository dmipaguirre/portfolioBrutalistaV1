---

// 1. Definimos tus palabras distintas
const words = [
  "Diseño UI/UX",
  "Desarrollo Web",
  "Estrategia",
  "Branding",
  "Astro Build",
];

// 2. Duplicamos el array para crear el efecto bucle infinito
// Al poner [...words, ...words], tenemos la lista dos veces seguida.
const carouselContent = [...words, ...words];
---

<footer class="footer-container" aria-hidden="true">
  <div class="text-carrusel-container">
    {
      carouselContent.map((text) => (
        <div class="text-carrusel-content">
          <p>
            {text}
            <span class="spacer">—</span>
          </p>
        </div>
      ))
    }
  </div>
</footer>

<style>
  .footer-container {
    width: 100vw;
    border-top: 1px solid var(--line, #ccc);
    padding: 1rem 0;
    position: relative;
    overflow: hidden;
    background: var(--bg-color, transparent);
  }

  .text-carrusel-container {
    display: flex;
    width: fit-content;
    pointer-events: none;
    /* Se establece una duración más legible (12s) */
    animation: carrusel-infinite 9s linear infinite;
  }

  /* Contenido individual */
  .text-carrusel-content {
    /* Opacidad aumentada para mejor visibilidad */
    opacity: 0.5;
    display: flex;
  }

  .text-carrusel-content p {
    pointer-events: none;
    display: flex;
    align-items: center;
    font-size: 5vw; /* Tamaño de fuente responsivo */
    white-space: nowrap;
    font-weight: 700;
    text-transform: uppercase;
    margin: 0;
    padding: 0;
    font-family: var(--font-mono);
    color: white; /* Asegurar visibilidad */
  }

  .spacer {
    padding: 0 3vw; /* Espacio entre las repeticiones del texto */
  }

  /* Keyframes para la animación infinita de izquierda a derecha */
  @keyframes carrusel-infinite {
    0% {
      transform: translateX(0);
    }
    /* Mueve el carrusel la distancia de UN SOLO bloque de contenido (25% del total, ya que hay 4 bloques). Esto crea el loop. */
    100% {
      transform: translateX(-50%);
    }
  }
</style>
