<style>
  .sticky-header {
    position: sticky;
    top: 75px;
    background-color: var(--bg);
    padding: 2rem;
    border-bottom: 1px solid var(--line);
    z-index: 20;
    display: flex;
    justify-content: space-between;
    align-items: center;
    backdrop-filter: blur(8px);
    background-color: rgba(var(--bg), 0.9);
  }
  .terminal {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    opacity: 0.5;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-transform: uppercase;

    & h3 {
      font-weight: 400;
      font-family: var(--font-mono);
    }
  }

  .dot {
    width: 8px;
    height: 8px;
    background-color: var(--accent);
    border-radius: 50%;
    display: inline-block;
    margin-left: 1rem;
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }

  .project-list {
    border-bottom: 1px solid var(--line);
  }
  .project-item {
    position: relative;
    padding: 2.5rem;
    border-bottom: 1px solid var(--line);
    cursor: pointer;
    transition: all 0.5s ease;
    overflow: hidden;
    z-index: 1;
    display: block;
    text-decoration: none;
    color: inherit;
  }
  .project-item:last-child {
    border-bottom: none;
  }
  .project-content {
    display: flex;
    justify-content: space-between;
  }

  .project-num {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
    display: block;
  }

  .project-title {
    font-size: 3.5rem;
    font-family: var(--font-grotesk);
    text-transform: uppercase;
  }
  .project-cat {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 1px solid var(--line);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    transition: border-color 0.3s;
  }

  .project-item::before {
    content: "";
    position: absolute;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100%;
    background: #1d1c1c;
    transition: right 0.3s ease;
    z-index: -1;
  }
  .project-item:hover::before {
    right: 0;
  }

  .project-item:hover .project-title,
  .project-item:hover .project-cat {
    transition: all 0.3s ease;
    color: var(--bg);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    border-top: 1px solid var(--line);
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  .blog-item {
    padding: 2rem;
  }

  .blog-content h4 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-family: var(--font-grotesk);
    font-weight: 700;
  }
  .read-article {
    font-size: 0.75rem;
    opacity: 0.5;
    display: flex;
    align-items: center;
    gap: 0.1rem;
    cursor: pointer;
    text-transform: uppercase;
    font-family: var(--font-mono);
  }

  .blog-item-anchor {
    text-decoration: none;
    color: inherit;
    display: inline-block;
    width: auto;
    align-items: center;
  }

  .blog-item-anchor svg {
    transition:
      transform 180ms cubic-bezier(0.2, 0.9, 0.3, 1),
      opacity 120ms ease;
    transform: translateX(0);
  }
  .blog-item-anchor:hover .read-article svg,
  .blog-item-anchor:focus-visible .read-article svg {
    transform: translateX(6px);
  }

</style>
