<style>
  .aside-section {
    border-bottom: none;
    border-right: 1px solid var(--line);
    position: sticky;
    top: 0;
    height: 100vh;
    padding: 2rem;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
  }

  .avatar-container {
    margin-bottom: 2rem;
    cursor: crosshair;
  }

  .avatar-frame {
    width: 160px;
    height: 160px;
    overflow: hidden;
    border: 1px solid var(--line);
    position: relative;
    margin-bottom: 1rem;
  }
  .avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) contrast(120%);
    transition: transform 0.3s ease;
  }

  .avatar-badge {
    position: absolute;
    bottom: 0;
    right: 0;
    background-color: var(--accent);
    color: var(--bg);
    padding: 0.25rem;
    display: flex;
  }

  .avatar-container h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
    font-family: var(--font-grotesk);
  }

  .avatar-container p {
    font-size: 0.75rem;
    opacity: 0.5;
    color: var(--text-secondary);
    font-family: var(--font-mono);
  }
  .biodata-container {
    flex-grow: 1;
  }
  .terminal {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    opacity: 0.5;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-transform: uppercase;

    & h3 {
      font-weight: 400;
      font-family: var(--font-mono);
    }
  }

  .biodata-text {
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0.8;
    font-family: var(--font-grotesk);
    font-weight: 300;
  }

  .stack-container {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--line);
  }

  .stack-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    margin-top: 1rem;
  }
  .stack-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s;
  }
  .dot {
    width: 4px;
    height: 4px;
    background-color: red;
    border-radius: 50%;
  }
</style>
